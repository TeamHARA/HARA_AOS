        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_1</item>
        <item name="android:includeFontPadding">false</item>
        <!-- Customize your theme here. -->
    </style>


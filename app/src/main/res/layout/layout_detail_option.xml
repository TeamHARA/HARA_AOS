<?xml version="1.0" encoding="utf-8"?>
<!-- [option 1] title  -->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="optSel"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_opt_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_gray4_stroke_1_8">

        <!-- [option] title  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_opt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="12dp"
            android:background="@{optSel ? @drawable/shape_rectangle_blue1_stroke_1_8 : @drawable/shape_rectangle_gray4_stroke_1_8}">

            <ImageView
                android:id="@+id/iv_opt_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{optSel ? @drawable/ic_checkcircle_on : @drawable/ic_checkcircle_off}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginVertical="11dp" />

            <TextView
                android:id="@+id/tv_opt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="선택지 글자수 제한은 공백 포함 20"
                android:textColor="@{optSel ? @color/blue_1 : @color/black}"
                app:layout_constraintBottom_toBottomOf="@+id/iv_opt_check"
                app:layout_constraintStart_toEndOf="@+id/iv_opt_check"
                app:layout_constraintTop_toTopOf="@+id/iv_opt_check"
                android:textAppearance="@style/hara_body3_r14" />

            <TextView
                android:id="@+id/tv_opt_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textColor="@{optSel ? @color/blue_1 : @color/black}"
                app:layout_constraintBottom_toBottomOf="@id/tv_opt_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_opt_content"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/hara_body3_r14" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- [option] pro -->
        <TextView
            android:id="@+id/tv_opt_pro_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="장점"
            app:layout_constraintTop_toBottomOf="@id/cl_opt_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/hara_body2_m14"
            android:textColor="@color/blue_1" />

        <TextView
            android:id="@+id/tv_opt_pro_content"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:text="안녕하세요 반가워요 잘있어요 다시 만나요"
            app:layout_constraintStart_toEndOf="@+id/tv_opt_pro_title"
            app:layout_constraintTop_toTopOf="@+id/tv_opt_pro_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_opt_pro_title"
            android:textAppearance="@style/hara_body2_m14"
            android:textColor="@color/gray_2" />

        <!-- [option] con -->
        <TextView
            android:id="@+id/tv_opt_con_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="단점"
            app:layout_constraintTop_toBottomOf="@id/tv_opt_pro_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:textAppearance="@style/hara_body2_m14"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_opt_con_content"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:text="안녕하세요 반가워요 잘있어요 다시 만나요"
            app:layout_constraintStart_toEndOf="@+id/tv_opt_con_title"
            app:layout_constraintTop_toTopOf="@+id/tv_opt_con_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_opt_con_title"
            android:textAppearance="@style/hara_body2_m14"
            android:textColor="@color/gray_2"
            android:textSize="14sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
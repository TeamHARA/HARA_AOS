<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/blue_3"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tv_worry_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일상"
                android:textAppearance="@style/hara_sub1_sb12"
                android:textColor="@color/blue_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_worry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.12.25"
                android:textAppearance="@style/hara_sub3_r12"
                android:textColor="@color/blue_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_worry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="글자수 제한은 공백 포함 28자 글자수 제한은 공백"
                android:textAppearance="@style/hara_heading1_sb16"
                app:layout_constraintStart_toStartOf="@id/tv_worry_category"
                app:layout_constraintTop_toBottomOf="@id/tv_worry_category" />

            <TextView
                android:id="@+id/tv_worry_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. 동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세 무궁화 삼천리 화려 강산 대한 사람 대한으로 길이 보전하세 2. 남산 위에 저 소나무 철갑을 두른 듯 바람 서리 불변함은 우리 기상일세 무궁화 삼천리 화려 강산 대한 사람 대한으로 길이 보전하세 3. 가을 하늘 공활한데 ..."
                android:textAppearance="@style/hara_body2_m14"
                app:layout_constraintStart_toStartOf="@id/tv_worry_category"
                app:layout_constraintTop_toBottomOf="@id/tv_worry_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_worry_vote_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_gray4_stroke_1_8"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_worry_content">

                <ImageView
                    android:id="@+id/iv_worry_checkcircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkcircle_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_worry_vote_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="선택지 글자수 제한은 공백 포함 20"
                    android:textAppearance="@style/hara_body3_r14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_worry_checkcircle"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_worry_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_rectangle_white_orange3"
                android:minHeight="0dp"
                android:paddingVertical="12dp"
                android:stateListAnimator="@null"
                android:text="@string/vote"
                android:textAppearance="@style/hara_body1_sb14"
                android:textColor="@color/orange_1"
                app:layout_constraintTop_toBottomOf="@+id/cl_worry_vote_button" />

            <ImageView
                android:id="@+id/iv_worry_comment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_chat"
                app:layout_constraintBottom_toBottomOf="@id/tv_worry_comment_num"
                app:layout_constraintEnd_toStartOf="@+id/tv_worry_comment_num"
                app:layout_constraintTop_toTopOf="@id/tv_worry_comment_num" />

            <TextView
                android:id="@+id/tv_worry_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:hint="10"
                android:textAppearance="@style/hara_sub3_r12"
                android:textColor="@color/gray_3"
                app:layout_constraintEnd_toEndOf="@id/btn_worry_vote"
                app:layout_constraintTop_toBottomOf="@id/btn_worry_vote" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
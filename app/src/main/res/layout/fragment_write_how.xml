<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.android.hara.presentation.write.fragment.how.HowFragViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <TextView
            android:id="@+id/tv_write_content_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="86dp"
            android:text="@string/write_title_question"
            android:textAppearance="@style/hara_modal1_m24"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_category_worry_alone_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_rectangle_white_orange1"
            android:paddingTop="63dp"
            android:paddingBottom="64dp"
            android:stateListAnimator="@null"
            android:text="@string/write_category_alone"
            android:textAppearance="@style/hara_heading2_m16"
            android:textColor="@drawable/selector_text_orange3_gray5"
            app:layout_constraintEnd_toStartOf="@+id/btn_category_worry_with_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_write_content_question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_category_worry_with_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_rectangle_white_orange1"
            android:paddingTop="63dp"
            android:paddingBottom="64dp"
            android:stateListAnimator="@null"
            android:text="@string/write_category_alone"
            android:textAppearance="@style/hara_heading2_m16"
            android:textColor="@drawable/selector_text_orange3_gray5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_category_worry_alone_button"
            app:layout_constraintTop_toBottomOf="@+id/tv_write_content_question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ib_write_content_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_rectangle_blue3_stroke_1_1000"
            android:paddingHorizontal="70dp"
            android:paddingVertical="14dp"
            android:text="@string/write_upload_button"
            android:textAppearance="@style/hara_heading1_sb16"
            android:textColor="@color/blue_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_write_content_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_on"
            app:layout_constraintBottom_toBottomOf="@+id/ib_write_content_upload_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ib_write_content_upload_button" />

        <ImageButton
            android:id="@+id/ib_write_content_next_button_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next_on"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/ib_write_content_upload_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ib_write_content_upload_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <TextView
            android:id="@+id/tv_write_category_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="126dp"
            android:text="@string/write_category_question"
            android:textAppearance="@style/hara_modal1_m24"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_category_select_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/shape_rectangle_blue3_stroke_1_8"
            android:paddingStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_write_category_question">

            <TextView
                android:id="@+id/tv_category_option_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="14dp"
                android:text="@string/write_category_answer_hint"
                android:textAppearance="@style/hara_heading2_m16"
                android:textColor="@color/gray_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category_selected_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/hara_heading2_m16"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="일상" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_category_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/blue_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_category_select_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_category_worry_alone_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_rectangle_white_orange1"
            android:paddingTop="63dp"
            android:paddingBottom="64dp"
            android:stateListAnimator="@null"
            android:text="@string/write_category_alone"
            android:textAppearance="@style/hara_heading2_m16"
            android:textColor="@drawable/selector_text_orange3_gray5"
            app:layout_constraintEnd_toStartOf="@+id/btn_category_worry_with_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_category_divider" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_category_worry_with_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_rectangle_white_orange1"
            android:paddingTop="63dp"
            android:paddingBottom="64dp"
            android:stateListAnimator="@null"
            android:text="@string/write_category_alone"
            android:textAppearance="@style/hara_heading2_m16"
            android:textColor="@drawable/selector_text_orange3_gray5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_category_worry_alone_button"
            app:layout_constraintTop_toBottomOf="@+id/view_category_divider" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_worry_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth="5dp"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_background"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_comment_option"
            app:layout_constraintTop_toBottomOf="@+id/btn_category_worry_with_button" />

        <TextView
            android:id="@+id/tv_comment_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_comment_option"
            android:textAppearance="@style/hara_body3_r14"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/switch_worry_option"
            app:layout_constraintBottom_toBottomOf="@+id/switch_worry_option" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ib_write_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/selector_rectangle_blue3_blue1"
            android:paddingHorizontal="70dp"
            android:paddingVertical="14dp"
            android:text="@string/write_upload_button"
            android:enabled="false"
            android:textAppearance="@style/hara_heading1_sb16"
            android:textColor="@drawable/selector_text_blue3_grey5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_write_category_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_on"
            app:layout_constraintBottom_toBottomOf="@+id/ib_write_upload_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ib_write_upload_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>